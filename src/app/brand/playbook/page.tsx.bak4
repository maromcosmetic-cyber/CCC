// Generate comprehensive plain text version for export
function generatePlaybookText(brandIdentity: any, project: any, competitors: any[]): string {
    let text = `========================================\n`;
    text += `${project?.name || "BRAND"} MASTER PLAYBOOK\n`;
    text += `========================================\n\n`;
    text += `Generated: ${new Date().toLocaleDateString()}\n`;
    text += `CONFIDENTIAL - Strategic Brand Intelligence\n\n`;

    // Helper function to add section
    const addSection = (title: string, data: any, keys: string[]) => {
        if (data && Object.keys(data).length > 0) {
            text += `\n${title}\n${"=".repeat(title.length)}\n\n`;
            for (const key of keys) {
                const value = data[key];
                if (value) {
                    const label = key.replace(/_/g, ' ').toUpperCase();
                    if (Array.isArray(value)) {
                        text += `${label}:\n`;
                        value.forEach(item => text += `  - ${item}\n`);
                        text += `\n`;
                    } else {
                        text += `${label}: ${value}\n\n`;
                    }
                }
            }
        }
    };

    // Add all sections
    addSection("1. BRAND DNA & PHILOSOPHY", brandIdentity.dna,
        ["name", "problem_solved", "origin_story", "mission", "vision", "world_problem", "emotional_outcome", "differentiator", "anti_identity", "values", "ethical_boundaries", "standards", "ten_year_identity"]);

    addSection("2. PRODUCT INTELLIGENCE", brandIdentity.product,
        ["name", "category", "main_benefits", "unique_features", "quality_level", "price_point", "why_choose_us"]);

    addSection("3. TARGET AUDIENCE & PSYCHOLOGY", brandIdentity.audience,
        ["ideal_customer", "pain_points", "desires", "fears", "shopping_behavior", "influences"]);

    addSection("4. STRATEGIC POSITIONING", brandIdentity.positioning,
        ["market_category", "sub_category", "target_audience", "not_for", "remembered_for", "dominant_idea"]);

    addSection("5. MARKET & COMPETITION", brandIdentity.market,
        ["competitors", "positioning", "market_gap"]);

    addSection("6. OFFER STRUCTURE", brandIdentity.offer,
        ["price_strategy", "bundles", "subscriptions"]);

    addSection("7. CUSTOMER JOURNEY", brandIdentity.journey,
        ["discovery", "hesitation", "after_purchase"]);

    // Visual Identity (custom handling for complex data)
    if (brandIdentity.visual) {
        text += `\n8. VISUAL IDENTITY\n${"=".repeat(18)}\n\n`;

        if (brandIdentity.visual.colors?.primary?.length > 0) {
            text += `COLORS:\n`;
            brandIdentity.visual.colors.primary.forEach((color: any) => {
                text += `  - ${color.name}: ${color.hex}\n`;
            });
            text += `\n`;
        }

        if (brandIdentity.visual.typography) {
            text += `TYPOGRAPHY:\n`;
            if (brandIdentity.visual.typography.headings?.length > 0) {
                text += `  Headings:\n`;
                brandIdentity.visual.typography.headings.forEach((font: any) => {
                    text += `    - ${font.family}`;
                    if (font.weights?.length > 0) {
                        text += ` (Weights: ${font.weights.join(', ')})`;
                    }
                    text += `\n`;
                });
            }
            if (brandIdentity.visual.typography.body?.length > 0) {
                text += `  Body:\n`;
                brandIdentity.visual.typography.body.forEach((font: any) => {
                    text += `    - ${font.family}`;
                    if (font.weights?.length > 0) {
                        text += ` (Weights: ${font.weights.join(', ')})`;
                    }
                    text += `\n`;
                });
            }
            text += `\n`;
        }

        if (brandIdentity.visual.logo?.url) {
            text += `LOGO: ${brandIdentity.visual.logo.url}\n\n`;
        }

        if (brandIdentity.visual.image_style) {
            text += `IMAGE STYLE: ${brandIdentity.visual.image_style}\n\n`;
        }

        if (brandIdentity.visual.mood) {
            text += `VISUAL MOOD: ${brandIdentity.visual.mood}\n\n`;
        }
    }

    addSection("9. VOICE & TONE", brandIdentity.voice,
        ["personality_traits", "vocabulary_style", "humor_level", "authority_level", "emotional_range", "words_to_use", "words_to_avoid", "on_brand_phrases", "forbidden_phrases"]);

    addSection("10. BRAND GUARDRAILS", brandIdentity.guardrails,
        ["regulatory_limits", "cultural_sensitivities", "platform_policies", "forbidden_claims"]);

    addSection("11. NARRATIVE ARCHITECTURE", brandIdentity.narrative,
        ["hero", "villain", "guide", "transformation", "outcome"]);

    addSection("12. PROBLEM MATRIX & PAIN HIERARCHY", brandIdentity.pain_matrix,
        ["physical_problems", "emotional_problems", "social_problems", "financial_problems", "identity_problems"]);

    addSection("13. CONTENT PILLAR SYSTEM", brandIdentity.content_pillars,
        ["pillar_1", "pillar_2", "pillar_3", "pillar_4"]);

    addSection("14. TRUST INFRASTRUCTURE", brandIdentity.trust_infrastructure,
        ["social_proof_types", "certifications", "partnerships", "media_mentions", "guarantees"]);

    addSection("15. COMMUNITY MODEL", brandIdentity.community_model,
        ["customer_treatment_philosophy", "problem_resolution_protocol", "loyalty_building_tactics", "community_building_strategy"]);

    addSection("16. PLATFORM STRATEGY", brandIdentity.platform_strategy,
        ["primary_platforms", "platform_tone_adjustments", "content_types_per_platform"]);

    addSection("17. LONG-TERM VISION", brandIdentity.long_term_vision,
        ["future_products", "future_markets", "future_positioning", "brand_evolution_path"]);

    addSection("18. KPIs & OPTIMIZATION", brandIdentity.kpis_optimization,
        ["success_metrics", "benchmarks", "growth_targets"]);

    addSection("19. AI AUTONOMY RULES", brandIdentity.ai_autonomy_rules,
        ["can_decide_alone", "requires_approval", "forbidden_actions", "escalation_logic"]);

    // Add competitor intelligence (comprehensive)
    if (competitors && competitors.length > 0) {
        text += `\n20. COMPETITOR INTELLIGENCE\n${"=".repeat(26)}\n\n`;
        competitors.forEach((comp, i) => {
            const analysis = comp.analysis;
            text += `\n--- COMPETITOR ${i + 1}: ${comp.name} ---\n`;
            text += `Website: ${comp.website_url}\n\n`;

            if (analysis?.competitor_identification) {
                text += `TYPE: ${analysis.competitor_identification.competitor_type}\n`;
                text += `Threat Level: ${analysis.competitor_identification.threat_level}/10\n`;
                text += `Priority: ${analysis.competitor_identification.priority_to_monitor}\n\n`;
            }

            if (analysis?.brand_positioning_extraction) {
                text += `POSITIONING:\n`;
                text += `Core Promise: ${analysis.brand_positioning_extraction.core_promise || 'N/A'}\n`;
                text += `Emotional Angle: ${analysis.brand_positioning_extraction.emotional_angle || 'N/A'}\n\n`;
            }

            if (analysis?.target_audience_signals?.demographics) {
                text += `TARGET AUDIENCE:\n`;
                text += `Demographics: ${analysis.target_audience_signals.demographics.age_range}, ${analysis.target_audience_signals.demographics.gender}\n`;
                text += `Emotional State: ${analysis.target_audience_signals.emotional_state_targeted || 'N/A'}\n\n`;
            }

            if (analysis?.offer_structure_pricing) {
                text += `PRICING:\n`;
                text += `Price Ranges: ${analysis.offer_structure_pricing.price_ranges || 'N/A'}\n\n`;
            }

            if (analysis?.weakness_detection?.exploitable_gaps?.length > 0) {
                text += `EXPLOITABLE WEAKNESSES:\n`;
                analysis.weakness_detection.exploitable_gaps.forEach((gap: any) => {
                    text += `  - Gap: ${gap.gap}\n`;
                    text += `    Opportunity: ${gap.opportunity}\n`;
                    text += `    Attack Angle: ${gap.attack_angle}\n`;
                });
                text += `\n`;
            }

            if (analysis?.strategic_insights) {
                text += `STRATEGIC INSIGHTS:\n`;
                if (analysis.strategic_insights.market_gaps?.length > 0) {
                    text += `Market Gaps:\n`;
                    analysis.strategic_insights.market_gaps.forEach((gap: string) => {
                        text += `  - ${gap}\n`;
                    });
                }
                if (analysis.strategic_insights.positioning_opportunities?.length > 0) {
                    text += `Positioning Opportunities:\n`;
                    analysis.strategic_insights.positioning_opportunities.forEach((opp: string) => {
                        text += `  - ${opp}\n`;
                    });
                }
                text += `\n`;
            }

            if (analysis?.integration_into_brand) {
                text += `HOW TO COMPETE:\n`;
                text += `Differentiation: ${analysis.integration_into_brand.differentiation_strategy || 'N/A'}\n`;
                text += `Positioning Angle: ${analysis.integration_into_brand.positioning_angle || 'N/A'}\n`;
                text += `Offer Strategy: ${analysis.integration_into_brand.offer_strategy || 'N/A'}\n\n`;
            }

            text += `${"=".repeat(50)}\n`;
        });
    }

    text += `\n========================================\n`;
    text += `END OF MASTER PLAYBOOK\n`;
    text += `========================================\n`;
    text += `\nÂ© ${new Date().getFullYear()} ${project?.name || "Your Brand"}. All Rights Reserved.\n`;

    return text;
}
