// Helper Component for Playbook Sections
function PlaybookSection({ icon, title, subtitle, data, fields }: {
    icon?: React.ReactNode;
    title: string;
    subtitle?: string;
    data: any;
    fields: Array<{ label: string; key: string; isArray?: boolean }>;
}) {
    if (!data) return null;

    // Check if section has any data
    const hasData = fields.some(({ key }) => {
        const value = data[key];
        return value && (!Array.isArray(value) || value.length > 0);
    });

    if (!hasData) return null;

    return (
        <section className="mb-10 page-break-inside-avoid">
            <div className="flex items-start gap-3 mb-4 pb-3 border-b-2 border-indigo-200">
                {icon && <div className="text-indigo-600 mt-1">{icon}</div>}
                <div className="flex-1">
                    <h2 className="text-xl font-bold">{title}</h2>
                    {subtitle && <p className="text-sm text-muted-foreground mt-1">{subtitle}</p>}
                </div>
            </div>
            <div className="space-y-4 pl-2">
                {fields.map(({ label, key, isArray }) => {
                    const value = data[key];
                    if (!value || (Array.isArray(value) && value.length === 0)) return null;

                    return (
                        <div key={key} className="pl-4 border-l-2 border-gray-200">
                            <p className="text-xs font-semibold text-indigo-600 uppercase mb-1 tracking-wide">{label}</p>
                            {isArray && Array.isArray(value) ? (
                                <ul className="list-disc list-inside text-sm space-y-1">
                                    {value.map((item: string, i: number) => (
                                        <li key={i} className="text-gray-700">{item}</li>
                                    ))}
                                </ul>
                            ) : (
                                <p className="text-sm whitespace-pre-wrap text-gray-700">{value}</p>
                            )}
                        </div>
                    );
                })}
            </div>
        </section>
    );
}

