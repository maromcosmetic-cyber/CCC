    const handleExportPDF = async () => {
        const element = document.getElementById('playbook-content');
        if (!element) {
            toast.error('âŒ Playbook content not found');
            return;
        }

        toast.info('ðŸ“„ Generating PDF... This may take 10-20 seconds.');

        try {
            // Wait for all images to be fully loaded
            const images = element.querySelectorAll('img');
            const imageLoadPromises = Array.from(images).map((img) => {
                return new Promise((resolve) => {
                    if (img.complete) {
                        resolve(true);
                    } else {
                        img.onload = () => resolve(true);
                        img.onerror = () => resolve(false);
                        setTimeout(() => resolve(false), 5000);
                    }
                });
            });

            await Promise.all(imageLoadPromises);

            // Try to convert images to base64 data URLs via a proxy approach
            const originalImages = element.querySelectorAll('img');
            const imageData: Array<{ element: HTMLImageElement, dataUrl: string | null }> = [];

            for (const img of Array.from(originalImages)) {
                try {
                    // Try to fetch image through our API to bypass CORS
                    const response = await fetch(`/api/proxy-image?url=${encodeURIComponent(img.src)}`);
                    if (response.ok) {
                        const blob = await response.blob();
                        const dataUrl = await new Promise<string>((resolve) => {
                            const reader = new FileReader();
                            reader.onloadend = () => resolve(reader.result as string);
                            reader.readAsDataURL(blob);
                        });
                        imageData.push({ element: img, dataUrl });
                    } else {
                        imageData.push({ element: img, dataUrl: null });
                    }
                } catch (e) {
                    // If proxy fails, try direct conversion
                    try {
                        const canvas = document.createElement('canvas');
                        const ctx = canvas.getContext('2d');
                        if (ctx && img.complete && img.naturalWidth > 0) {
                            canvas.width = img.naturalWidth;
                            canvas.height = img.naturalHeight;
                            ctx.drawImage(img, 0, 0);
                            const dataUrl = canvas.toDataURL('image/jpeg', 0.9);
                            imageData.push({ element: img, dataUrl });
                        } else {
                            imageData.push({ element: img, dataUrl: null });
                        }
                    } catch (err) {
                        imageData.push({ element: img, dataUrl: null });
                    }
                }
            }

            // Clone element and replace images with data URLs
            const clonedElement = element.cloneNode(true) as HTMLElement;
            const clonedImages = clonedElement.querySelectorAll('img');

            imageData.forEach((data, index) => {
                if (data.dataUrl && clonedImages[index]) {
                    clonedImages[index].src = data.dataUrl;
                }
            });

            const opt = {
                margin: 0.5,
                filename: `${currentProject?.name || 'brand'}-playbook.pdf`,
                image: { type: 'jpeg' as const, quality: 0.95 },
                html2canvas: {
                    scale: 2,
                    logging: false,
                    letterRendering: true
                },
                jsPDF: {
                    unit: 'in' as const,
                    format: 'letter',
                    orientation: 'portrait' as const
                },
                pagebreak: {
                    mode: ['avoid-all', 'css', 'legacy'],
                    before: '.page-break-before',
                    after: '.page-break-after',
                    avoid: '.avoid-break'
                }
            };

            await html2pdf().set(opt).from(clonedElement).save();
            toast.success('âœ… PDF downloaded successfully!');
        } catch (err: any) {
            console.error('PDF generation error:', err);
            toast.error('âŒ Failed to generate PDF: ' + (err.message || 'Unknown error'));
        }
