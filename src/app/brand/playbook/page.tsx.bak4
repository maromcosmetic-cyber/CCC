    }, [currentProject?.id]);

    const handleSyncAll = async () => {
        if (!currentProject?.id) {
            toast.error("No project selected");
            return;
        }

        setSyncing(true);
        setSyncProgress("ðŸŒ Analyzing website...");

        try {
            // Stage 1: Analyze website (brand identity + products)
            const response = await fetch('/api/brand/analyze-website', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ projectId: currentProject.id })
            });

            const result = await response.json();

            if (response.ok) {
                setSyncProgress("âœ… Brand data synced!");
                toast.success(`âœ… Playbook updated! Found ${result.stats.productsFound || 0} products`);

                // Refresh project data
                await refreshProjects();

                // Refresh competitors list
                const compRes = await fetch(`/api/projects/${currentProject.id}/competitors`);
                const compData = await compRes.json();
                setCompetitors(compData.competitors || []);

                setTimeout(() => {
                    setSyncing(false);
                    setSyncProgress("");
                }, 1000);
            } else {
                toast.error("âŒ Sync Failed: " + result.error);
                setSyncing(false);
                setSyncProgress("");
            }
